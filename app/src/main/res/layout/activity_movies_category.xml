<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvTitleMovies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movies – All"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- סטייל אחיד לכל הפוסטרים -->
        <!-- גובה נוח + מרכז + בלי חיתוכים מוזרים -->

        <ImageButton
            android:id="@+id/btnTitanic"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@null"
            android:src="@drawable/titanic_poster"/>

        <ImageButton
            android:id="@+id/btnForrestGump"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@null"
            android:src="@drawable/forrest_gump_poster"/>

        <ImageButton
            android:id="@+id/btnMatrix"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@null"
            android:src="@drawable/matrix_poster"/>

        <ImageButton
            android:id="@+id/btnBoozgalos"
