<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFF7FB">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvCreateTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Create Movie / Series"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#1F1F1F"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvCreateSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="×”×•×¡×™×¤×™ ×›×•×ª×¨×ª ×—×“×©×”, ×‘×—×¨×™ ×¡×•×’ ×•×–×³×× ×¨ â€” ×•× ×‘×™× ×¤×•×¡×˜×¨ ××•×˜×•×ž×˜×™×ª ðŸ’–"
            android:textSize="14sp"
            android:textColor="#6B6B6B"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvCreateTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCreate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="10dp"
            app:strokeWidth="1dp"
            app:strokeColor="#33FF69B4"
            app:layout_constraintTop_toBottomOf="@id/tvCreateSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="×©× ×¡×¨×˜ / ×¡×“×¨×”"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#FFF0F6"
                    app:boxCornerRadiusTopStart="18dp"
                    app:boxCornerRadiusTopEnd="18dp"
                    app:boxCornerRadiusBottomStart="18dp"
                    app:boxCornerRadiusBottomEnd="18dp"
                    app:startIconDrawable="@android:drawable/ic_menu_edit"
                    app:startIconTint="#FF1493">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTitleName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#1F1F1F"
                        android:textColorHint="#7A7A7A"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Year -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="×©× ×” (×¨×©×•×ª) â€“ ×œ×“×•×’×ž×”: 2020"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#FFF0F6"
                    app:boxCornerRadiusTopStart="18dp"
                    app:boxCornerRadiusTopEnd="18dp"
                    app:boxCornerRadiusBottomStart="18dp"
                    app:boxCornerRadiusBottomEnd="18dp"
                    app:startIconDrawable="@android:drawable/ic_menu_today"
                    app:startIconTint="#FF1493">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTitleYear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#1F1F1F"
                        android:textColorHint="#7A7A7A"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Type -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="×¡×•×’"
                    android:textStyle="bold"
                    android:textColor="#1F1F1F"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#1A000000">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <RadioButton
                            android:id="@+id/rbMovie"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="Movie"
                            android:textStyle="bold"
                            android:textColor="#1F1F1F"
                            android:buttonTint="#FF1493" />

                        <RadioButton
                            android:id="@+id/rbSeries"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Series"
                            android:textStyle="bold"
                            android:textColor="#1F1F1F"
                            android:buttonTint="#7C3AED" />
                    </RadioGroup>
                </com.google.android.material.card.MaterialCardView>

                <!-- Genre -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="×–×³×× ×¨"
                    android:textStyle="bold"
                    android:textColor="#1F1F1F"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#FFF0F6"
                    app:boxCornerRadiusTopStart="18dp"
                    app:boxCornerRadiusTopEnd="18dp"
                    app:boxCornerRadiusBottomStart="18dp"
                    app:boxCornerRadiusBottomEnd="18dp"
                    app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
                    app:startIconTint="#FF1493"
                    app:endIconMode="dropdown_menu"
                    android:hint="×‘×—×¨×™ ×–×³×× ×¨">

                    <!-- ×©×™×ž×™ ×œ×‘: Spinner ×‘×ª×•×š TextInputLayout ×¢×•×‘×“ ×˜×•×‘ ×œ×¨×•×‘,
                         ×× ×™×”×™×• ×ª×§×œ×•×ª - × ×¢×‘×•×¨ ×œ-AutoCompleteTextView -->
                    <Spinner
                        android:id="@+id/spGenre"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:entries="@array/genres_array"
                        android:background="@android:color/transparent" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Selected Genre -->
                <TextView
                    android:id="@+id/tvSelectedGenre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    android:text="Genre: ×œ× × ×‘×—×¨"
                    android:textStyle="bold"
                    android:textColor="#7C3AED"
                    android:background="#FFF0F6" />

                <!-- Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreateTitle"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="16dp"
                    android:text="Create / Open"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#FF1493"
                    app:cornerRadius="18dp"
                    app:icon="@android:drawable/ic_menu_add"
                    app:iconGravity="textStart"
                    app:iconPadding="10dp" />

                <!-- Tip -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="×˜×™×¤: ××¤×©×¨ ×œ×”×©××™×¨ ×©× ×” ×¨×™×§×” ðŸ™‚"
                    android:textColor="#6B6B6B"
                    android:textAlignment="center"
                    android:layout_marginTop="12dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
