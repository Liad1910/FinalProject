<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#050515">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Movie / Series"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FF67F3"
            android:paddingBottom="14dp" />

        <!-- Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#151528">

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="砖"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etTitleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="砖 住专 / 住专"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#9AA0AA"
                android:background="#0F0F1F" />

            <!-- Year -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="砖 (专砖转)"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="14dp" />

            <EditText
                android:id="@+id/etTitleYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=": 2020"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#9AA0AA"
                android:background="#0F0F1F" />

            <!-- Type & Genre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="住 壮专"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/rbMovie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Movie"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FF67F3" />

                <RadioButton
                    android:id="@+id/rbSeries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Series"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#3D5AFE" />

                <Spinner
                    android:id="@+id/spGenre"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="#0F0F1F"
                    android:entries="@array/genres_array" />
            </LinearLayout>

            <!-- Selected Genre (专专!) -->
            <TextView
                android:id="@+id/tvSelectedGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:background="#0F0F1F"
                android:text="Genre:  专"
                android:textColor="#3D5AFE"
                android:textStyle="bold" />

            <!-- Button -->
            <Button
                android:id="@+id/btnCreateTitle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="18dp"
                android:text="Create / Open"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF67F3" />
        </LinearLayout>

        <!-- Tip -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tip: 驻砖专 砖专 砖 专拽 "
            android:textColor="#9AA0AA"
            android:textAlignment="center"
            android:layout_marginTop="14dp" />
    </LinearLayout>
</ScrollView>
