<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#050515">

    <!-- Toolbar 转 注 注 转驻专 3 拽转 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMovie"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#050515"
        app:titleTextColor="#FFFFFF"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!--  转 砖  注 注砖 转 ScrollView -->
    <ScrollView
        android:id="@+id/rootScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 转专转 住专 转 住 -->
            <TextView
                android:id="@+id/tvMovieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Movie Title"
                android:textColor="#FF67F3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <!-- 驻住专 住专 -->
            <ImageView
                android:id="@+id/imgPoster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher_background" />

            <!-- 驻转专 专专 -->
            <Button
                android:id="@+id/btnTrailer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#3D5AFE"
                android:text="爪驻 专专 "
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- 驻转专 砖转祝 -->
            <Button
                android:id="@+id/btnShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FF67F3"
                android:text="砖转祝 "
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- 驻转专 注驻 -->
            <Button
                android:id="@+id/btnFavorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#A855F7"
                android:text="住驻 注驻 "
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- 转专转 拽专转 -->
            <TextView
                android:id="@+id/tvReviewsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="拽专转 砖转砖"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- 转转 住驻转 拽专转 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#151528">

                <TextView
                    android:id="@+id/tvAddReviewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="住驻转 拽专转"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/ratingBarReview"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:numStars="5"
                    android:stepSize="1.0" />

                <EditText
                    android:id="@+id/etReviewText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#0F0F1F"
                    android:hint="转/转:  砖转 注 住专..."
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA"
                    android:minLines="2" />

                <Button
                    android:id="@+id/btnSendReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#3D5AFE"
                    android:text="砖 拽专转 "
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 拽住:  拽专转 -->
            <TextView
                android:id="@+id/tvNoReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text=" 拽专转 注. 转 专砖 "
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:textAlignment="center" />

            <!--  转住驻 拽专转 砖拽 爪专 转 -->
            <LinearLayout
                android:id="@+id/layoutReviewsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
