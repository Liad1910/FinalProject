<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#080015">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 砖  -->
        <ImageView
            android:id="@+id/imgNeonSign"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- 砖转 专注 -->
        <EditText
            android:id="@+id/eTEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint=""
            android:inputType="textEmailAddress"
            android:backgroundTint="#00E5FF"
            android:textColor="#FFFFFF"
            android:textColorHint="#88CFFF"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/eTPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="住住"
            android:inputType="textPassword"
            android:backgroundTint="#00E5FF"
            android:textColor="#FFFFFF"
            android:textColorHint="#88CFFF"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/eTUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="砖 砖转砖"
            android:backgroundTint="#00E5FF"
            android:textColor="#FFFFFF"
            android:textColorHint="#88CFFF"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/eTBirthYear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="砖转 "
            android:inputType="number"
            android:backgroundTint="#00E5FF"
            android:textColor="#FFFFFF"
            android:textColorHint="#88CFFF"
            android:maxLength="4"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />



        <!-- Spinner '专  -->
        <Spinner
            android:id="@+id/spGenre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_marginBottom="26dp" />

        <!-- 驻转专 爪专 -->
        <Button
            android:id="@+id/btnCreate"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text=" 爪专 砖转砖"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF00E6"
            android:elevation="6dp"
            android:onClick="createUser"
            android:layout_marginBottom="22dp" />

        <!-- 注 -->
        <TextView
            android:id="@+id/tVMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF66FF"
            android:textSize="15sp"
            android:gravity="center"
            android:shadowColor="#00FFFF"
            android:shadowRadius="5" />

    </LinearLayout>
</ScrollView>
