<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7FB"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitleSeries"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Series"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#2B2B2B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvSubtitleSeries"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="×—×™×¤×•×©, ×¡×™× ×•×Ÿ ×•×ž×™×•×Ÿ ×©×œ ×¡×“×¨×•×ª ðŸ“ºâœ¨"
            android:textSize="14sp"
            android:textColor="#6B6B6B"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitleSeries"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Search -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSearchSeries"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="×—×™×¤×•×© ×¡×“×¨×”â€¦"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#FFF0F6"
            app:boxCornerRadiusTopStart="18dp"
            app:boxCornerRadiusTopEnd="18dp"
            app:boxCornerRadiusBottomStart="18dp"
            app:boxCornerRadiusBottomEnd="18dp"
            app:startIconDrawable="@android:drawable/ic_menu_search"
            app:startIconTint="#FF1493"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitleSeries"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSearchSeries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Buttons -->
        <LinearLayout
            android:id="@+id/rowControlsSeries"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tilSearchSeries"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSortSeries"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="×ž×™×•×Ÿ"
                android:textAllCaps="false"
                android:backgroundTint="#FF69B4"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGenreSeries"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="2"
                android:text="×–'×× ×¨: ×”×›×œ"
                android:textAllCaps="false"
                android:backgroundTint="#FF1493"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvResultsCountSeries"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="× ×ž×¦××• 0 ×¡×“×¨×•×ª"
            android:textColor="#6B6B6B"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/rowControlsSeries"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAllSeries"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvResultsCountSeries"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
