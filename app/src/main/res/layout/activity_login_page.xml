<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#080015">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- 砖  砖 转专转 -->
        <ImageView
            android:id="@+id/imgLoginNeon"
            android:layout_width="387dp"
            android:layout_height="214dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="36dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/img_1" />



        <!--  -->
        <EditText
            android:id="@+id/eTEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:backgroundTint="#00E5FF"
            android:textColor="#FFFFFF"
            android:textColorHint="#88CFFF"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="14dp"
            android:elevation="2dp"/>

        <!-- 住住 -->
        <EditText
            android:id="@+id/eTPass"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="住住"
            android:inputType="textPassword"
            android:backgroundTint="#00E5FF"
            android:textColor="#FFFFFF"
            android:textColorHint="#88CFFF"
            android:imeOptions="actionDone"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="6dp"
            android:elevation="2dp"/>

        <!-- 砖专 转 专 -->
        <CheckBox
            android:id="@+id/cbStayConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="砖专 转 专"
            android:textColor="#FFFFFF"
            android:paddingVertical="6dp"
            android:layout_marginBottom="20dp"/>

        <!-- 驻转专 转专转 -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=" 转专/"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF00E6"
            android:stateListAnimator="@null"
            android:elevation="8dp"
            android:onClick="loginUser"
            android:layout_marginBottom="24dp"/>

        <!-- 注转 爪 -->
        <TextView
            android:id="@+id/tVMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF66FF"
            android:textSize="15sp"
            android:gravity="center"
            android:shadowColor="#00FFFF"
            android:shadowRadius="5" />

    </LinearLayout>
</ScrollView>
