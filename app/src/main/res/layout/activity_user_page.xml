<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFF7FB">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#2B2B2B"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvProfileSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="×¢×“×›× ×™ ×¤×¨×˜×™× ×›×“×™ ×œ×”×ª××™× ×œ×š ×”×ž×œ×¦×•×ª ðŸ’–"
            android:textSize="14sp"
            android:textColor="#6B6B6B"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="10dp"
            app:strokeWidth="1dp"
            app:strokeColor="#33FF69B4"
            app:layout_constraintTop_toBottomOf="@id/tvProfileSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Email label + value -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textStyle="bold"
                    android:textColor="#2B2B2B"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="example@mail.com"
                    android:textColor="#2B2B2B"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:layout_marginTop="6dp"
                    android:background="#FFF0F6" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="10dp"
                    android:background="#1A000000" />

                <!-- Username -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#FFF0F6"
                    app:boxCornerRadiusTopStart="18dp"
                    app:boxCornerRadiusTopEnd="18dp"
                    app:boxCornerRadiusBottomStart="18dp"
                    app:boxCornerRadiusBottomEnd="18dp"
                    app:startIconDrawable="@android:drawable/ic_menu_edit"
                    app:startIconTint="#FF1493">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#2B2B2B"
                        android:textColorHint="#7A7A7A" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Birth Year -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Birth year"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#FFF0F6"
                    app:boxCornerRadiusTopStart="18dp"
                    app:boxCornerRadiusTopEnd="18dp"
                    app:boxCornerRadiusBottomStart="18dp"
                    app:boxCornerRadiusBottomEnd="18dp"
                    app:startIconDrawable="@android:drawable/ic_menu_today"
                    app:startIconTint="#FF1493">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBirthYear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#2B2B2B"
                        android:textColorHint="#7A7A7A" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Favorite movie -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Favorite movie"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#FFF0F6"
                    app:boxCornerRadiusTopStart="18dp"
                    app:boxCornerRadiusTopEnd="18dp"
                    app:boxCornerRadiusBottomStart="18dp"
                    app:boxCornerRadiusBottomEnd="18dp"
                    app:startIconDrawable="@android:drawable/ic_media_play"
                    app:startIconTint="#FF1493">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMovie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#2B2B2B"
                        android:textColorHint="#7A7A7A" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Favorite series -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Favorite series"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#FFF0F6"
                    app:boxCornerRadiusTopStart="18dp"
                    app:boxCornerRadiusTopEnd="18dp"
                    app:boxCornerRadiusBottomStart="18dp"
                    app:boxCornerRadiusBottomEnd="18dp"
                    app:startIconDrawable="@android:drawable/ic_menu_slideshow"
                    app:startIconTint="#FF1493">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSeries"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#2B2B2B"
                        android:textColorHint="#7A7A7A" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Favorite genre -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Favorite genre"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#FFF0F6"
                    app:boxCornerRadiusTopStart="18dp"
                    app:boxCornerRadiusTopEnd="18dp"
                    app:boxCornerRadiusBottomStart="18dp"
                    app:boxCornerRadiusBottomEnd="18dp"
                    app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
                    app:startIconTint="#FF1493">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etGenre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#2B2B2B"
                        android:textColorHint="#7A7A7A" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Favorites -->
                <TextView
                    android:id="@+id/tvFavoritesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="×”×ž×•×¢×“×¤×™× ×©×œ×™"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF1493"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/tvFavorites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(××™×Ÿ ×ž×•×¢×“×¤×™× ×¢×“×™×™×Ÿ)"
                    android:textColor="#2B2B2B"
                    android:background="#FFF0F6"
                    android:padding="12dp"
                    android:layout_marginTop="8dp" />

                <!-- Message -->
                <TextView
                    android:id="@+id/tvMsgUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#D7263D"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="10dp" />

                <!-- Save button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveUser"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#FF1493"
                    app:cornerRadius="18dp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
