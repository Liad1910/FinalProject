<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- כותרת -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp" />

        <!-- אימייל (רק להצגה) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#EEEEEE"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- שם משתמש -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter username"
            android:layout_marginBottom="16dp" />

        <!-- שנת לידה -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birth year"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etBirthYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="e.g. 2008"
            android:layout_marginBottom="16dp" />

        <!-- סרט אהוב -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite movie"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter favorite movie"
            android:layout_marginBottom="16dp" />

        <!-- סדרה אהובה -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite series"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etSeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter favorite series"
            android:layout_marginBottom="16dp" />

        <!-- ז'אנר אהוב -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite genre"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter favorite genre"
            android:layout_marginBottom="24dp" />

        <!-- הודעות שגיאה / הצלחה -->
        <TextView
            android:id="@+id/tvMsgUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:layout_marginBottom="16dp" />

        <!-- כפתור שמירה -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSaveUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textAllCaps="false"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>
