<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7FB"
    android:fitsSystemWindows="true">

    <!-- ×©×œ×•× -->
    <TextView
        android:id="@+id/tvHelloMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="×©×œ×•× ×× ×•× ×™×ž×™"
        android:textColor="#2B2B2B"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="×‘×—×¨×™ ×ž×©×”×• ×›×™×¤×™ ×œ×¦×¤×™×™×” ðŸŽ¬âœ¨"
        android:textColor="#6B6B6B"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvHelloMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Card ×œ×§×¨×•×¡×œ×” -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCarousel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="#33FF69B4"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintHeight_percent="0.66">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivMainImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/up_poster"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Overlay ×ª×—×ª×•×Ÿ -->
            <View
                android:id="@+id/overlay"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:background="@drawable/gradient_bottom_overlay"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- ×›×•×ª×¨×ª ×”×¡×¨×˜ -->
            <TextView
                android:id="@+id/tvCarouselTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Up (2009)"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="70dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- ×›×¤×ª×•×¨ ×¦×¤×” ×¢×›×©×™×• -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWatchNow"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="×¦×¤×” ×¢×›×©×™×•"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FF1493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- ×—×¥ ××—×•×¨×” -->
            <ImageButton
                android:id="@+id/btnPrev"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_media_previous"
                app:tint="@android:color/white"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <!-- ×—×¥ ×§×“×™×ž×” -->
            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_media_next"
                app:tint="@android:color/white"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="#FF1493"
        app:itemTextColor="#FF1493"
        app:itemRippleColor="#33FF69B4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
