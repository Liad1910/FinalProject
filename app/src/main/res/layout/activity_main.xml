<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/tvHelloMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שלום אנונימי"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnGo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="עמוד הרשמה"
        android:onClick="goToRegister"
        android:background="#FF1493"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvHelloMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnGoLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="עמוד לוגין"
        android:onClick="goToLogin"
        android:background="#FF1493"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnGo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="התנתקות"
        android:onClick="logout"
        android:background="#FF1493"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnGoLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
